{
  "name": "counter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.4.34",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "patch-package",
    "lint": "npx eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npx eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:ci": "npx eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "test:ci": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test --watchAll=false",
    "analyze": "npm run build && npx serve -s build",
    "clean": "rm -rf build node_modules/.cache"
  },
  "resolutions": {
    "nth-check": "^2.0.1"
  },
  "pnpm": {
    "overrides": {
      "postcss": "^8.4.31"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-transform-stub": "^2.0.0",
    "tailwindcss": "^3.4.4"
  }
}